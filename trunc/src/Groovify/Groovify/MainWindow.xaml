<Window x:Class="Groovify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Groovify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" Background="#181818">
            <TextBlock  Text="Play/Pause etc..." Foreground="White"/>
        </WrapPanel>
        <ListBox DockPanel.Dock="Left" Background="#121212" Width="100">
            <Button Content="Titre" BorderThickness="0" Background="Transparent" Foreground="White"/>
            <Button Content="Artiste" BorderThickness="0" Background="Transparent" Foreground="White"/>
            <Button Content="Albums" BorderThickness="0" Background="Transparent" Foreground="White"/>
        </ListBox>
        <ScrollViewer DockPanel.Dock="Top">
            <local:VueTitres/>
        </ScrollViewer>
    </DockPanel>
</Window>
