<UserControl x:Class="Groovify.Vues.VueDetailAlbum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groovify.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="#121212">
        <WrapPanel DockPanel.Dock="Top">
            <Image Source="{Binding Image}" Margin="10" Height="100" Width="100"/>
            <TextBlock Text="{Binding Name}" Margin="10" Foreground="White"/>
        </WrapPanel>
        <TextBlock Text="Titres" Foreground="White" DockPanel.Dock="Top"/>
        <ContentControl x:Name="Titres" DockPanel.Dock="Top" BorderThickness="0"/>
    </DockPanel>
</UserControl>
