<UserControl x:Class="Groovify.ClickableAlbum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groovify"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Height="120" Width="100" Margin="10" BorderThickness="0" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Button.Content>
            <Grid x:Name="ClikableAlbum">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Source="../Ressources/swimming.jpg" Height="100" Width="100"/>
                <TextBlock Text="Swimming" Foreground="White" Grid.Row="1" TextAlignment="Center"/>
            </Grid>
        </Button.Content>
    </Button>
</UserControl>
